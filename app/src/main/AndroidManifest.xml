<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uek.krakow.pl.androidinvoicegenerator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApp">
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.FormActivity" />
        <activity
            android:name=".controller.SettingsActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".controller.ProviderFormActivity" />
        <activity android:name=".controller.BuyerFormActivity" />
        <activity android:name=".controller.GoodsFormActivity" />
        <activity android:name=".controller.SummaryFormActivity" />
        <activity android:name=".controller.ShareFormActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>